                        <div class="contact-item">
                            <i class="fas fa-envelope"></i>
                            <span id="contact-email"><%= place.email %></span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </main>

    <script>

function checkout(id){
    window.location.href =`/checkout/${id}`
}

        document.addEventListener('DOMContentLoaded', function() {
    const imageSlider = document.getElementById('image-slider');
    const sliderControls = document.getElementById('slider-controls');
    
    const images = imageSlider.querySelectorAll('.hotel-image');
    const imageCount = images.length;
    
    imageSlider.style.width = `${imageCount * 100}%`;
    
    images.forEach(image => {
        image.style.width = `${100 / imageCount}%`;
    });
    
    for (let i = 0; i < imageCount; i++) {
        const dot = document.createElement('div');
        dot.classList.add('slider-dot');
        
        if (i === 0) {
            dot.classList.add('active');
        }
        
        dot.addEventListener('click', function() {
            goToSlide(i);
        });
        
        sliderControls.appendChild(dot);
    }
    
    let currentSlide = 0;
    
    function goToSlide(index) {
        currentSlide = index;        
        imageSlider.style.transform = `translateX(-${currentSlide * (100 / imageCount)}%)`;
                const dots = sliderControls.querySelectorAll('.slider-dot');
        dots.forEach((dot, i) => {
            if (i === currentSlide) {
                dot.classList.add('active');
            } else {
                dot.classList.remove('active');
            }
        });
    }    
    let interval = setInterval(nextSlide, 5000);
    
    function nextSlide() {
        let nextIndex = currentSlide + 1;
        if (nextIndex >= imageCount) {
            nextIndex = 0;
        }
        goToSlide(nextIndex);
    }
    imageSlider.addEventListener('mouseenter', () => {
        clearInterval(interval);
    });
    
    imageSlider.addEventListener('mouseleave', () => {
        interval = setInterval(nextSlide, 3000);
    });
});
    </script>
    
