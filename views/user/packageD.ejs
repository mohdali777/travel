                <div class="package-location">
                    <i class="fas fa-map-marker-alt" style="margin-right: 10px;"></i>
                    <span id="package-location"><%= place.state %>, <%= place.Country %></span>
                </div>
                <div class="package-id">Package ID: <span id="package-id"><%= place.packegId %></span></div>
            </div>
            
