    <style>
        :root {
            --primary: #4a6cf7;
            --secondary: #6c757d;
            --success: #28a745;
            --background: #f8f9fa;
            --card-bg: #ffffff;
            --text: #343a40;
            --border: #dee2e6;
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background-color: var(--background);
            color: var(--text);
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 0;
            border-bottom: 1px solid var(--border);
        }
        
        .logo {
            font-size: 24px;
            font-weight: bold;
            color: var(--primary);
        }
        
        .nav-items {
            display: flex;
            gap: 20px;
        }
        
        .nav-item {
            cursor: pointer;
        }
        
        .profile-container {
            display: flex;
            gap: 20px;
            margin-top: 30px;
        }
        
        .sidebar {
            width: 250px;
        }
        
        .profile-card {
            background-color: var(--card-bg);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        
        .profile-pic {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background-color: var(--secondary);
            margin: 0 auto 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 32px;
        }
        
        .profile-name {
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .profile-email {
            text-align: center;
            color: var(--secondary);
            margin-bottom: 15px;
            font-size: 14px;
        }
        
        .menu-items {
            list-style: none;
        }
        
        .menu-item {
            padding: 12px 15px;
            border-radius: 5px;
            margin-bottom: 5px;
            cursor: pointer;
            transition: background-color 0.2s;
        }
        
        .menu-item:hover {
            background-color: rgba(74, 108, 247, 0.1);
        }
        
        .menu-item.active {
            background-color: var(--primary);
            color: white;
        }
        
        .main-content {
            flex: 1;
        }
        
        .page-title {
            font-size: 24px;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--border);
        }
        
        .vault-details {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
        }
        
        .vault-card {
            background-color: var(--card-bg);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .vault-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .vault-title i {
            color: var(--primary);
        }
        
        .vault-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }
        
        .vault-balance {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .transaction-list {
            list-style: none;
            margin-top: 20px;
        }
        
        .transaction-item {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid var(--border);
        }
        
        .transaction-detail {
            display: flex;
            flex-direction: column;
        }
        
        .transaction-name {
            font-weight: 500;
        }
        
        .transaction-date {
            font-size: 12px;
            color: var(--secondary);
        }
        
        .transaction-amount {
            font-weight: 500;
        }
        
        .transaction-amount.credit {
            color: var(--success);
        }
        
        .transaction-amount.debit {
            color: #dc3545;
        }
        
        .btn {
            background-color: var(--primary);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 500;
            transition: background-color 0.2s;
        }
        
        .btn:hover {
            background-color: #3a5bd9;
        }
        
        .btn-outline {
            background-color: transparent;
            color: var(--primary);
            border: 1px solid var(--primary);
        }
        
        .btn-outline:hover {
            background-color: rgba(74, 108, 247, 0.1);
        }
        
        .vault-actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-top: 30px;
        }
        
        .stat-card {
            background-color: var(--card-bg);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .stat-title {
            color: var(--secondary);
            font-size: 14px;
            margin-bottom: 10px;
        }
        
        .stat-value {
            font-size: 24px;
            font-weight: bold;
        }
        
        .recent-activity {
            background-color: var(--card-bg);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }
        
        .activity-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .section-title {
            font-size: 18px;
            font-weight: bold;
        }
        
        @media (max-width: 768px) {
            .profile-container {
                flex-direction: column;
            }
            
            .sidebar {
                width: 100%;
            }
            
            .vault-details {
                grid-template-columns: 1fr;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }
        }


        .walletimportant-container {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 400px;
            width: 100%;
        }
        .walletimportant-heading {
            color: #333;
        }
        .walletimportant-input-group {
            margin: 1rem 0;
        }
        .walletimportant-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }
        .walletimportant-input {
            width: 100%;
            padding: 0.8rem;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
            box-sizing: border-box;
        }
        .walletimportant-button {
            background-color: #4CAF50;
            color: white;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: background 0.3s;
        }
        .walletimportant-button:hover {
            background-color: #45a049;
        }
    </style>
    <%- include('../partials/users/header') %>
    <div class="container">
        <div class="profile-container">
            <div class="sidebar">
                <div class="profile-card">
                    <div class="profile-pic">P</div>
                    <div class="profile-name"><%= user.username%></div>
                    <div class="profile-email"><%= user.email%></div>
                    <button class="btn btn-outline" style="width: 100%;">Edit Profile</button>
                </div>
                
                <div class="profile-card">
                    <ul class="menu-items">
                        <li class="menu-item active">Vault Dashboard</li>
                        <li  class="menu-item"><a href="/bookings" style="text-decoration: none; color: #333;">Booking History</a></li>
                    </ul>
                </div>
            </div>
            
            <div class="main-content">
                <h1 class="page-title">Vault Dashboard</h1>
                
                <div class="vault-details">
                    <div class="vault-card">
                        <div class="vault-title">
                            <i>ðŸ’°</i> Primary Vault
                        </div>
                        <div class="vault-info">
                            <div>
                                <div class="vault-balance">â‚¹<%= wallet.balance%></div>
                                <div>Available Balance</div>
                            </div>
                               
                        </div>
                        <div class="vault-actions">
                            <button class="btn">Add Funds</button>
                            <button class="btn btn-outline">Withdraw</button>
                        </div>
                    </div>
                    <div class="walletimportant-container">
                        <h2 class="walletimportant-heading">Add Money to Your Wallet</h2>
                        <form  id="wallet-add" method="POST">
                            <div class="walletimportant-input-group">
                                <label for="walletimportant-amount" class="walletimportant-label">Enter Amount:</label>
                                <input type="number" id="walletimportant-amount" name="amount" placeholder="Enter amount" required class="walletimportant-input">
                            </div>
                            <button type="submit" class="walletimportant-button">Add Money</button>
                        </form>
                    </div>
                </div>

                <div class="recent-activity">
                    <div class="activity-header">
                        <div class="section-title">Recent Transactions</div>
                        <button class="btn btn-outline">View All</button>
                    </div>
                    <ul class="transaction-list">
                      <%  wallet.transactions.forEach((li)=>{ %>
                            <li class="transaction-item">
                                <div class="transaction-detail">
                                    <span class="transaction-name"><%= li.description %></span>
                                    <span class="transaction-date"><%= li.date %></span>
                                </div>
                                <div class="transaction-amount <%= li.transactionType %>" 
                                    style="color: <%= li.transactionType === 'credit' ? 'green' : 'red' %>;">
                                    â‚¹<%= li.amount %>
                               </div>                                                         
                            </li>
                      <%  }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("wallet-add").addEventListener("submit", (e) => {
    e.preventDefault();
    
    const amount = document.getElementById("walletimportant-amount").value;
    
    if (!amount || amount <= 0) {
      return  iziToast.error({
        title: 'Error',
        message: 'Please add Valid Amount',
        position: 'topRight',
    });
}

    fetch("/wallet/add", {
        method: "POST",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify({ amount: amount })  
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            Swal.fire({
        title: "Success!",
        text: "Added Successfully", // Dynamic success message
        icon: "success",
        confirmButtonText: "OK"
    }).then(()=>{
        window.location.reload()
    })
        } else {
            alert("Failed to add amount. Try again.");
        }
    })
    .catch(error => console.error("Error:", error));
});

    </script>
</body>
</html>