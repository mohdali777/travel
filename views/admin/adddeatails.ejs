                            <input type="email" class="form-input" id="email" placeholder="Email address">
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Website</label>
                    <input type="url" class="form-input" placeholder="Enter hotel website URL">
                </div>
                
                <div class="form-actions">
                    <button class="btn btn-secondary">Cancel</button>
                    <button class="btn btn-primary" >Add Hotel</button>
                </div>
            </div>
            
        <script>
 let variantCount = 0; 
function addPlace() {
const container = document.getElementById('place-container');
const row = document.createElement('div');
row.classList.add('variant-row');
variantCount++; 

row.innerHTML = `
<div class="form-group">
                    <label class="form-label">Place Name</label>
                    <input type="text" class="form-input" id="place-name-${variantCount}" placeholder="Enter Place name">
                </div>
                <div class="form-group">
                    <label class="form-label">Description *</label>
                    <textarea class="form-textarea" id="place-desc-${variantCount}" placeholder="Enter place description"></textarea>
                </div>
                <div class="form-group">
    <label for="image">Upload Image:</label>
    <input type="file" id="image-${variantCount}" name="image" accept="image/*" multiple required><br><br>
 </div>
<button type="button" class="btn btn-danger" onclick="removeVariant(this)">Remove</button>
`;
container.appendChild(row);
}

function removeVariant(button) {
button.parentElement.remove();
}


async function submitTravelItem() {
const placeName = document.getElementById("place-name").value;
const description = document.getElementById("description").value;
const state = document.getElementById("State").value;
const country = document.getElementById("Country").value;
const price = document.getElementById("price").value;
const HotelName = document.getElementById("HOTEL-NAME").value;
const phone = document.getElementById("phone").value;
const email = document.getElementById("email").value;
const amenities = [];
const checkboxes = document.querySelectorAll('.checkbox-group input[type="checkbox"]:checked');
        checkboxes.forEach(checkbox => {
            amenities.push(checkbox.value); 
        });

console.log(amenities); 
const fileInput = document.getElementById('image');
    const files = fileInput.files; 
    if (files.length > 10) {
        alert("You can upload a maximum of 10 images.");
        return;
    }
    for (let i = 0; i < files.length; i++) {
        const file = files[i];
        if (file.size > 5 * 1024 * 1024) {
            alert(`File "${file.name}" exceeds the 5MB size limit.`);
            return;
        }

        if (!file.type.startsWith('image/')) {
            alert(`File "${file.name}" is not a valid image.`);
            return;
        }
    }

    const images = Array.from(files); 
    console.log(images); 


    const places = [];
    const rows = document.querySelectorAll('.variant-row');

    rows.forEach((row, index) => {
        const placeName = row.querySelector(`#place-name-${index+1}`).value;
        const placeDesc = row.querySelector(`#place-desc-${index+1}`).value;
        const placeImage = row.querySelector(`#image-${index+1}`).files[0];

        const place = {
            placeName: placeName,
            placeDesc: placeDesc,
            placeImage: placeImage, 
        };

        places.push(place); 
    });

const formdata = {
    placeName:placeName,
    description:description,
    state:state,
    country:country,
    price:price,
    HotelName:HotelName,
    phone:phone,
    email:email,
    hotelFacil:amenities,
    tourplaces:places
}

console.log(formdata)

try {
        const response = await fetch('/add-datas', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json', 
            },
            body: JSON.stringify(formdata), 
        });

        if (response.ok) {
            const result = await response.json();
            console.log('Data submitted successfully:', result);
            alert('Data submitted successfully!');
        } else {
            console.error('Failed to submit data:', response.statusText);
            alert('Failed to submit data.');
        }
    } catch (error) {
        console.error('Error submitting data:', error);
        alert('Error submitting data.');
    }


}

document.getElementById('submit-button-add').addEventListener('click', submitTravelItem);

        </script>