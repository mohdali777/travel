                        <div class="checkbox-item">
                            <input type="checkbox" id="breakfast" value="Breakfast">
                            <label for="breakfast">Breakfast Included</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="spa" value="spa">
